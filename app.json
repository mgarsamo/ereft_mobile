{
  "expo": {
    "name": "Ereft",
    "slug": "ereft",
    "version": "1.0.0",
    "sdkVersion": "53.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "scheme": "ereft",
    "description": "Find your perfect home in Ethiopia. Browse houses, apartments, and land across Ethiopian cities with advanced search, maps, and local address system.",

    "primaryColor": "#000000",
    "icon": "./assets/icon.png",


    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mgarsamo.ereft",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Ereft uses your location to show nearby properties and help you find homes in your area.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Ereft uses your location to show nearby properties and help you find homes in your area.",
        "NSCameraUsageDescription": "Ereft needs camera access to let you take photos of properties.",
        "NSPhotoLibraryUsageDescription": "Ereft needs photo library access to let you select property images.",
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "OAuth",
            "CFBundleURLSchemes": ["ereft"]
          }
        ]
      },
      "config": {
        "googleMapsApiKey": "AIzaSyBQqQqQqQqQqQqQqQqQqQqQqQqQqQqQqQ"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.mgarsamo.ereft",
      "versionCode": 1,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBQqQqQqQqQqQqQqQqQqQqQqQqQqQqQqQ"
        }
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "ereft"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Ereft uses your location to show nearby properties and help you find homes in your area."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "97281152-73eb-4305-9f84-baff3af1a997"
      }
    }
  }
}
